
-# .flash  グループを作成しました

.wrapper

  .side
    .side__header
      .side__header__box
        .side__header__box__name
          = current_user.name
        .side__header__box__icon  
        = link_to do
          .side__header__box__icon__new-group
            = fa_icon 'pencil-square-o', class: 'icon'
            -# %i.fa.fa-edit
          .side__header__box__icon__edit-user 
            -# %i.fa.fa-cog
            = link_to edit_user_path(current_user) do
              = fa_icon 'cog', class: 'icon'            

    .side__groups
      .side__groups__group
        .side__groups__group__name  rrrr
        .side__groups__group__message  ttt

  .main
    .main__header
      .main__header__left-box
        .main__header__left-box__current-group   nnnnnnn
        .main__header__left-box__member-list     jjjjjjj
          
      .main__header__edit-btn Edit
    .main__messages
    .main__form
      .main__form__input-box
        .main__form__input-box__image 
          %i.fa.fa-image

      .main__form__submit  Send
  